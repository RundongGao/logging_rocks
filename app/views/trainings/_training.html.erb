<tr>
	<td> <%= training.climber.first_name + ' ' + training.climber.last_name %> </td>
	<td> <%= training.date %> </td>
	<td> <%= training.total %> </td>
	<td> <%= training.top_rope_total %> </td>
	<td> <%= training.boundering_total %> </td>
	<td> <%= link_to 'details', controller: :finishes, action: :index, 
		training_id: training.id %> </td>
	<td> <%= link_to 'edit', edit_training_path(training) if @is_owner %> </td>
	<td> <%= link_to 'delete', training, method: :delete, data: { confirm: 'You sure'} if @is_owner%> </td>
</tr>